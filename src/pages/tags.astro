---
import BaseLayout from '../layouts/BaseLayout.astro';

const API_URL = import.meta.env.API_URL;

const tags_data = await fetch (`${API_URL}/api/v2/tags`);
const tags = await tags_data.json();

const pageTitle = 'Tags';
---

<BaseLayout pageTitle={pageTitle}>
    <main>
        <div class="mb-5">
            <h2 class="text-2xl">Tags</h2>
            <p>Todos los tags utilizados en los posts.</p>
        </div>

        <div class="flex lg:flex-row flex-col">
            {
                tags.items?.map((item) => (
                    <a href="" class="text-xl me-5 mb-3 lg:mb-0 font-bold text-orange-500 hover:border-b-4 hover:border-orange-600 hover:border-dashed">
                    {`#${item.name}`}
                    </a>
                ))
                
            }
        </div>
    </main>

</BaseLayout>