---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Separator from '../components/Separator.astro';

import { ViewTransitions } from 'astro:transitions';

interface Props {
  pageTitle: string;
  canonicalURL?: string;
}

const { pageTitle, canonicalURL } = Astro.props;

// Generate canonical URL: use provided one or default to current page URL
const canonical = canonicalURL || new URL(Astro.url.pathname, Astro.site).href;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<!-- Canonical URL -->
		<link rel="canonical" href={canonical} />
		<!-- Thumbnail -->
		<meta property='og:title' content='esvdev Blog'/>
		<meta property='og:image' content='/thumbnail/esvdev_blog_thumb.png'/>
		<meta property='og:description' content="Data Engineering - Python - AWS - Filosofia & Mindset - Career Growth"/>
		<meta property='og:url' content=''/>
		<meta property='og:image:width' content='1200' />
		<meta property='og:image:height' content='627' />
		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" referrerpolicy="no-referrer" />
		<!-- Dev Icons -->
		<link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
		<title>{pageTitle} - esvdev</title>

		<ViewTransitions />
	</head>

	<body>
		<Header />
		<Separator />

        <slot />

		
        <Footer />
	</body>

    <style is:global>
		@import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap');

        body {
			@apply text-slate-300 lg:w-2/4 mx-auto bg-[#01161E] p-4 min-h-screen;
			font-family: "Montserrat", sans-serif;
        }

		.markdown-parsed-content {
			@apply text-slate-300;
			max-width: 100%;
			h1 {
				@apply text-4xl font-bold mt-14 mb-5 text-slate-300;
			}
			h2 {
				@apply text-2xl font-bold mt-14 mb-5 text-slate-300;
			}
			h3 {
				@apply text-xl font-bold mt-14 mb-5 text-slate-300;
			}
			p, li {
				@apply text-lg mb-5 leading-loose;
			}
			
			ul > li, ol > li {
				@apply list-inside;
				padding-left: 0; 
				margin-left: 0;
			}
			li {
				@apply mb-3;
				padding-left: 0.5rem; 
			}

			code {
				@apply my-5 overflow-auto;
			}
		}

		ul{
			@apply list-disc list-inside p-3 mt-2 mb-2
		}

		ol{
			@apply list-decimal list-inside p-3 mt-2 mb-2
		}


		li {
			@apply mb-3
		}

		p > a, ul > li > a{
			@apply text-orange-500 hover:text-orange-600 underline underline-offset-4 decoration-dotted
		}

		pre > code {
			border-radius: 4px;
			padding: 15px;
			background: #02202c;
			font-family: Consolas, Monaco, 'Andale Mono', monospace;
			display: block;
			font-size: 15px;
			line-height: 1.5;
			word-break: normal;
			white-space: pre;
			word-spacing: normal;
			tab-size: 4;
		}

		strong:not(a strong), b:not(a b),
        .markdown-parsed-content strong:not(a strong),
        .markdown-parsed-content b:not(a b) {
            @apply font-bold text-sky-600; 
        }
    </style>
</html>